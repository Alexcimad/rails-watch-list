<div class="navbar-lewagon"> </div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
  </div>
</div>
<div class="container">
  <div id="cine_lists" class="d-flex justify-content-between">
    <h3>My lists</h3>
    <%= link_to "Create a movie list", new_list_path, class:"btn btn-primary" %>
  </div>
  <div class="row">
    <% @lists.each do |list|%>
      <% if list.photo.attached?%>
        <div class="col-12 col-lg-3 card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :thumb %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <%else%>
        <div class="col-12 col-lg-3 card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('san_francisco.jpg')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <%end%>
    <%end%>
  </div>

</div>
